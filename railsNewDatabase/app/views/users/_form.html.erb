<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited saving your profile:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <h4>Enter your name</h4>
    <%= f.text_field :name, placeholder: "Bob Jones" %>

    <h4>Add a short description of yourself</h4>
    <%= f.text_area :bio, size: "26x5"%>

    <h4>Choose a username</h4>
    <%= f.text_field :username %>

    <h4>Enter an email address</h4>
    <%= f.text_field :email %>

    <h4>Choose a password</h4>
    <%= f.text_field :password, type: :password %>

    <h4>Confirm Password</h4>
    <%= f.text_field :password_confirmation, type: :password %>

    <section class="form_buttom">
      <input type="submit" value="<%= @submit_text || "Submit" %>">
    </section>
  </div>
<% end %>