<!DOCTYPE html>
<html>

<head>
  <title>MergeTest3</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	This is the header
	<% if ((uid = session[:user_id])) %>
		<%= link_to "Projects", project_requirements_path %>
		<%= User.find(uid).name %><%= button_to "Logout", Session.find_by_user_id(session[:user_id]), method: :delete %>
	<% else %>
		<%= link_to "Login", new_session_path %>
		<%= link_to "Signup", new_user_path %>
	<% end %>
</header>

<div id="main" >
<%= yield %>

</div>
</body>
</html>